{
    "prettier.configPath": "config/prettier/.prettierrc.js",
    "prettier.ignorePath": "config/prettier/.prettierignore",
    "prettier.jsxBracketSameLine": true,
    "prettier.jsxSingleQuote": true,
    "prettier.semi": false,
    "prettier.singleQuote": true,
    "prettier.useEditorConfig": false,
    "eslint.options": {
        "extensions": [
            ".ts",
            ".vue"
        ]
    },
    "eslint.validate": [
        "javascript",
        "typescript",
        "vue"
    ],
    "eslint.alwaysShowStatus": true,
    "i18n-ally.localesPaths": [
        "src/locales/dev"
    ],
    "i18n-ally.sortKeys": true,
    "i18n-ally.keepFulfilled": true,
    "i18n-ally.enabledParsers": [
        "ts"
    ],
    "i18n-ally.sourceLanguage": "zh",
    "i18n-ally.enabledFrameworks": [
        "vue"
    ],
    "volar.codeLens.pugTools": false,
    "volar.takeOverMode.enabled": true,
    "[vue]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[ts]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[js]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[scss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "i18n-ally.keystyle": "nested",
    "json.schemas": [
        {
            "fileMatch": [
                "src/settings.json"
            ],
            "schema": {
                "type": "object",
                "properties": {
                    "themes": {
                        "description": "See more in naive-ui docs",
                        "type": "object",
                        "properties": {
                            "light": {
                                "type": "object",
                                "properties": {
                                    "primaryColor": {
                                        "type": "string"
                                    },
                                    "infoColor": {
                                        "type": "string"
                                    },
                                    "successColor": {
                                        "type": "string"
                                    },
                                    "warningColor": {
                                        "type": "string"
                                    },
                                    "errorColor": {
                                        "type": "string"
                                    },
                                    "bodyColor": {
                                        "type": "string"
                                    },
                                    "invertedColor": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "bodyColor",
                                    "errorColor",
                                    "infoColor",
                                    "invertedColor",
                                    "primaryColor",
                                    "successColor",
                                    "warningColor"
                                ]
                            },
                            "dark": {
                                "type": "object",
                                "properties": {
                                    "primaryColor": {
                                        "type": "string"
                                    },
                                    "infoColor": {
                                        "type": "string"
                                    },
                                    "successColor": {
                                        "type": "string"
                                    },
                                    "warningColor": {
                                        "type": "string"
                                    },
                                    "errorColor": {
                                        "type": "string"
                                    },
                                    "bodyColor": {
                                        "type": "string"
                                    },
                                    "invertedColor": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "bodyColor",
                                    "errorColor",
                                    "infoColor",
                                    "invertedColor",
                                    "primaryColor",
                                    "successColor",
                                    "warningColor"
                                ]
                            }
                        },
                        "required": [
                            "dark",
                            "light"
                        ]
                    },
                    "app": {
                        "type": "object",
                        "properties": {
                            "showLogo": {
                                "description": "App Logo visibility",
                                "type": "boolean"
                            },
                            "showMenu": {
                                "description": "App Menu visibility",
                                "type": "boolean"
                            },
                            "showHeader": {
                                "description": "App Header visibility",
                                "type": "boolean"
                            },
                            "showTabs": {
                                "description": "App Tabs visibility",
                                "type": "boolean"
                            },
                            "showFooter": {
                                "description": "App Footer visibility",
                                "type": "boolean"
                            },
                            "fixLogo": {
                                "description": "Logo fixed left side",
                                "type": "boolean"
                            },
                            "fixHeader": {
                                "description": "Header fixed in top",
                                "type": "boolean"
                            },
                            "fixFooter": {
                                "description": "Footer fixed in bottom",
                                "type": "boolean"
                            },
                            "showAnimation": {
                                "description": "Page change animation",
                                "type": "boolean"
                            },
                            "animationName": {
                                "$ref": "#/definitions/ValueOfTransitionNameConst",
                                "description": "Page change animation name"
                            },
                            "keepAlive": {
                                "description": "Keep alive pages",
                                "type": "boolean"
                            },
                            "layout": {
                                "$ref": "#/definitions/ValueOfAppLayoutModeConst",
                                "description": "App Layout"
                            },
                            "pageLeaveLock": {
                                "description": "Mouse leave page, lock app",
                                "type": "boolean"
                            },
                            "idleMS": {
                                "description": "User inactive milliseconds to lock app",
                                "type": "number"
                            },
                            "contentPadding": {
                                "description": "Content padding, default 1rem",
                                "type": "number"
                            }
                        },
                        "required": [
                            "animationName",
                            "contentPadding",
                            "fixFooter",
                            "fixHeader",
                            "fixLogo",
                            "idleMS",
                            "keepAlive",
                            "layout",
                            "pageLeaveLock",
                            "showAnimation",
                            "showFooter",
                            "showHeader",
                            "showLogo",
                            "showMenu",
                            "showTabs"
                        ]
                    },
                    "menu": {
                        "type": "object",
                        "properties": {
                            "showCollapse": {
                                "description": "Show collapse button",
                                "type": "boolean"
                            },
                            "collapseMode": {
                                "$ref": "#/definitions/ValueOfMenuCollapseModeConst",
                                "description": "Menu Collapse Mode"
                            },
                            "width": {
                                "description": "When app layout is `left-menu`, menu width",
                                "type": "number"
                            },
                            "collapsedWidth": {
                                "description": "When app layout is `left-menu`, menu collapsed width",
                                "type": "number"
                            },
                            "accordion": {
                                "description": "Menu accordion",
                                "type": "boolean"
                            },
                            "collapsedIconSize": {
                                "description": "Menu collapsed icon size",
                                "type": "number"
                            },
                            "iconSize": {
                                "description": "Menu icon size",
                                "type": "number"
                            },
                            "indent": {
                                "description": "Menu indent",
                                "type": "number"
                            },
                            "inverted": {
                                "description": "Menu inverted color",
                                "type": "boolean"
                            }
                        },
                        "required": [
                            "accordion",
                            "collapseMode",
                            "collapsedIconSize",
                            "collapsedWidth",
                            "iconSize",
                            "indent",
                            "inverted",
                            "showCollapse",
                            "width"
                        ]
                    },
                    "header": {
                        "type": "object",
                        "properties": {
                            "height": {
                                "description": "Header height",
                                "type": "number"
                            },
                            "showBreadcrumb": {
                                "description": "Header breadcrumb visibility",
                                "type": "boolean"
                            },
                            "showFullScreen": {
                                "description": "Header utils - full screen visibility",
                                "type": "boolean"
                            },
                            "showLocale": {
                                "description": "Header utils - locale picker visibility",
                                "type": "boolean"
                            },
                            "showDarkMode": {
                                "description": "Header utils - dark mode visibility",
                                "type": "boolean"
                            },
                            "showLock": {
                                "description": "Header utils - lock visibility",
                                "type": "boolean"
                            },
                            "showSearch": {
                                "description": "Header utils - search visibility",
                                "type": "boolean"
                            },
                            "inverted": {
                                "description": "Header inverted color",
                                "type": "boolean"
                            }
                        },
                        "required": [
                            "height",
                            "inverted",
                            "showBreadcrumb",
                            "showDarkMode",
                            "showFullScreen",
                            "showLocale",
                            "showLock",
                            "showSearch"
                        ]
                    },
                    "tab": {
                        "type": "object",
                        "properties": {
                            "height": {
                                "description": "Tab height",
                                "type": "number"
                            },
                            "showIcon": {
                                "description": "Tab icon visibility",
                                "type": "boolean"
                            },
                            "showUtils": {
                                "description": "Tab aside utils visibility",
                                "type": "boolean"
                            },
                            "contextMenu": {
                                "description": "Tab context menu visibility",
                                "type": "boolean"
                            },
                            "sortable": {
                                "description": "Tab sortable",
                                "type": "boolean"
                            },
                            "styleMode": {
                                "$ref": "#/definitions/ValueOfTabStyleModeConst",
                                "description": "Tab style mode"
                            },
                            "devtool": {
                                "description": "Tab devtool, only work in dev env",
                                "type": "boolean"
                            },
                            "persistent": {
                                "description": "With persistent support",
                                "type": "boolean"
                            }
                        },
                        "required": [
                            "contextMenu",
                            "devtool",
                            "height",
                            "persistent",
                            "showIcon",
                            "showUtils",
                            "sortable",
                            "styleMode"
                        ]
                    },
                    "breadcrumb": {
                        "type": "object",
                        "properties": {
                            "showIcon": {
                                "description": "Breadcrumb icon visibility",
                                "type": "boolean"
                            },
                            "showDropdown": {
                                "description": "Breadcrumb dropdown visibility",
                                "type": "boolean"
                            },
                            "separator": {
                                "description": "Breadcrumb custom separator",
                                "type": "string"
                            }
                        },
                        "required": [
                            "separator",
                            "showDropdown",
                            "showIcon"
                        ]
                    }
                },
                "required": [
                    "app",
                    "breadcrumb",
                    "header",
                    "menu",
                    "tab",
                    "themes"
                ],
                "definitions": {
                    "ValueOfTransitionNameConst": {
                        "enum": [
                            "back-down",
                            "back-left",
                            "back-right",
                            "back-up",
                            "bounce",
                            "bounce-down",
                            "bounce-left",
                            "bounce-right",
                            "bounce-up",
                            "fade",
                            "fade-bottomLeft",
                            "fade-bottomRight",
                            "fade-down",
                            "fade-downBig",
                            "fade-left",
                            "fade-leftBig",
                            "fade-right",
                            "fade-rightBig",
                            "fade-topLeft",
                            "fade-topRight",
                            "fade-up",
                            "fade-upBig",
                            "flip-x",
                            "flip-y",
                            "rotate",
                            "rotate-downLeft",
                            "rotate-downRight",
                            "rotate-upLeft",
                            "rotate-upRight",
                            "slide-down",
                            "slide-left",
                            "slide-right",
                            "slide-up",
                            "zoom",
                            "zoom-down",
                            "zoom-left",
                            "zoom-right",
                            "zoom-up"
                        ],
                        "type": "string"
                    },
                    "ValueOfAppLayoutModeConst": {
                        "enum": [
                            "left-menu",
                            "top-menu"
                        ],
                        "type": "string"
                    },
                    "ValueOfMenuCollapseModeConst": {
                        "enum": [
                            "arrow-circle",
                            "bar",
                            "button",
                            "icon"
                        ],
                        "type": "string"
                    },
                    "ValueOfTabStyleModeConst": {
                        "enum": [
                            "card",
                            "flex",
                            "round"
                        ],
                        "type": "string"
                    }
                },
                "$schema": "http://json-schema.org/draft-07/schema#"
            }
        }
    ]
}